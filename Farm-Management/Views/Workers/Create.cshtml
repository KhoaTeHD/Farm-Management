@model Farm_Management.Models.Worker
@{
    ViewData["Title"] = "Thêm công nhân";
}

<div class="page-header">
    <h2>👷 Thêm công nhân mới</h2>
</div>

<div class="form-container-center">
    <div class="card">
        <div class="card-header card-header-farm">Thông tin công nhân</div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Code" class="form-label"></label>
                        <input asp-for="Code" class="form-control" placeholder="VD: CN001" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="HireDate" class="form-label"></label>
                        <input asp-for="HireDate" class="form-control" type="date" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="DailySalary" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="DailySalary" class="form-control" type="number" step="1000" />
                        <span class="input-group-text">VNĐ/ngày</span>
                    </div>
                    <span asp-validation-for="DailySalary" class="text-danger"></span>
                    <small class="text-muted">Lương cơ bản cho 1 ngày công (8 giờ)</small>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsActive" class="form-check-input" checked />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-farm">💾 Lưu công nhân</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">← Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}