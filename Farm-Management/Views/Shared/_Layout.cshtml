@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Farm Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @* Leaflet CSS - chỉ load khi cần *@
    @if (ViewData["LoadMap"] != null)
    {
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    }
        
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-farm">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    🌿 Farm Management
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navMenu">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Areas" asp-action="Index">📍 Vùng trồng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PlantTypes" asp-action="Index">🌱 Loại cây</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Workers" asp-action="Index">👷 Công nhân</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="WaterSources" asp-action="Index">💧 Nguồn nước</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-3 mb-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-farm text-center">
        <div class="container">
            &copy; 2026 Farm Management - VietGAP
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Leaflet JS - chỉ load khi cần *@
    @if (ViewData["LoadMap"] != null)
    {
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
